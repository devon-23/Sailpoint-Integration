<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE TaskDefinition PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<TaskDefinition name="Test EmailTemplates" resultAction="Delete" subType="task_item_type_generic" type="Generic">
  <Attributes>
    <Map>
      <entry key="TaskSchedule.host"/>
      <entry key="email"/>
      <entry key="ruleName" value="Test Email Template"/>
      <entry key="taskCompletionEmailNotify" value="Disabled"/>
      <entry key="taskCompletionEmailRecipients"/>
      <entry key="taskCompletionEmailTemplate"/>
      <entry key="templates"/>
    </Map>
  </Attributes>
  <Description>A task to check visability of email templates</Description>
  <Owner>
    <Reference class="sailpoint.object.Identity" name=""/>
  </Owner>
  <Parent>
    <Reference class="sailpoint.object.TaskDefinition" name="Run Rule"/>
  </Parent>
  <Signature>
    <Inputs>
      <Argument helpKey="Seperate templates by ," name="templates" required="true" type="string">
        <Prompt>EmailTemplate Names. (comma seperated)</Prompt>
      </Argument>
      <Argument helpKey="" name="email" required="true" type="string">
        <Prompt>Email address to send it to</Prompt>
      </Argument>
    </Inputs>
  </Signature>
</TaskDefinition>
